%h1 Listing surveys

%table.table.table-striped
  %tr
    %th Title
    %th Description
    - if can? :manage, Survey
      %th Actions

  - @surveys.each do |survey|
    %tr
      %td= survey.title_link
      %td= survey.truncated_description
      %td
        - if can? :manage, survey
          = survey.edit_link
          = survey.destroy_link
        - if can? :read, Response
          = link_to 'View all responses', '#'

%br

- if can? :create, Survey
  = link_to 'New Survey', new_survey_path, class: %w(btn btn-primary)
