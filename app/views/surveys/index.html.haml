%h1 Listing surveys

%table.table.table-striped
  %tr
    %th Title
    %th Description
    - if can? :manage, Survey
      %th Actions

  - @surveys.each do |survey|
    %tr
      %td= survey.title_link
      %td= survey.truncated_description
      %td
        - if can? :update, survey
          = survey.edit_link
        - if can? :destroy, survey
          = survey.destroy_link

%br

= link_to 'New Survey', new_survey_path, class: %w(btn btn-primary)
